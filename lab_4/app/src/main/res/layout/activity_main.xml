<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:rowCount="10">

            <EditText
                android:id="@+id/et_name"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:hint="Введите ФИО"
                android:layout_column="0"
                android:layout_row="0"
                android:textStyle="bold|italic"
                android:gravity="center"
                android:elevation="2dp"
                android:textColorHint="#000000"
                android:textColor="#000000"
                />

            <EditText
                android:id="@+id/et_age"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:hint="Введите возраст"
                android:layout_column="1"
                android:layout_row="0"
                android:textStyle="bold|italic"
                android:gravity="center"
                android:elevation="2dp"
                android:textColorHint="#000000"
                android:textColor="#000000"
                />

            <EditText
                android:id="@+id/et_genre"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:hint="Введите жанр"
                android:layout_column="0"
                android:layout_row="1"
                android:textStyle="bold|italic"
                android:gravity="center"
                android:elevation="2dp"
                android:textColorHint="#000000"
                android:textColor="#000000"
                />

            <EditText
                android:id="@+id/et_countMusic"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:hint="Введите количество музыки"
                android:layout_column="1"
                android:layout_row="1"
                android:textStyle="bold|italic"
                android:gravity="center"
                android:elevation="2dp"
                android:textColorHint="#000000"
                android:textColor="#000000"
                />

            <EditText
                android:id="@+id/et_instrument"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:hint="Введите инструмент"
                android:layout_column="0"
                android:layout_row="2"
                android:textStyle="bold|italic"
                android:gravity="center"
                android:elevation="2dp"
                android:textColorHint="#000000"
                android:textColor="#000000"
                />

            <EditText
                android:id="@+id/et_moneyCondition"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:hint="Введите денежное состояние"
                android:layout_column="1"
                android:layout_row="2"
                android:textStyle="bold|italic"
                android:gravity="center"
                android:elevation="2dp"
                android:textColorHint="#000000"
                android:textColor="#000000"
                />

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="400dp"
                android:layout_height="100dp"
                android:hint="Введите номер телефона"
                android:layout_columnSpan="2"
                android:layout_row="3"
                android:textStyle="bold|italic"
                android:gravity="center"
                android:elevation="2dp"
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:inputType="phone"
                />

            <Button
                android:id="@+id/b_save"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:layout_row="4"
                android:text="Сохранить"
                style="@style/ButtonStyle"
                />

            <TextView
                android:id="@+id/tw_result"
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:layout_columnSpan="2"
                android:layout_row="5"
                android:textColorHint="#000000"
                android:hint="Результат"
                android:textStyle="bold|italic"
                android:gravity="center"
                android:elevation="2dp"
                android:textColor="#000000"
                />

            <Button
                android:id="@+id/b_data"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:layout_row="6"
                android:text="Получить данные"
                style="@style/ButtonStyle"

                />

<!--            <EditText-->
<!--                android:id="@+id/et_message"-->
<!--                android:layout_width="400dp"-->
<!--                android:layout_height="100dp"-->
<!--                android:hint="Введите сообщение"-->
<!--                android:layout_columnSpan="2"-->
<!--                android:layout_row="7"-->
<!--                android:textStyle="bold|italic"-->
<!--                android:gravity="center"-->
<!--                android:elevation="2dp"-->
<!--                android:textColorHint="#000000"-->
<!--                android:textColor="#000000"-->
<!--                />-->

        </GridLayout>
    </ScrollView>

</RelativeLayout>